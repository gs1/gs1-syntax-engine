<Window x:Class="GS1.ExampleWebServiceUserDotnetApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GS1.ExampleWebServiceUserDotnetApp"
        mc:Ignorable="d"
        Title="GS1 Barcode Syntax Engine Example Web Service User .NET app" Height="875" Width="960" MinWidth="960" MinHeight="875">
    <Grid Margin="0,0,0,21">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="233"/>
        </Grid.ColumnDefinitions>

        <Rectangle Margin="10,514,10,0" Stroke="Black" Grid.ColumnSpan="2"/>

        <Label x:Name="extractedDataLabel" Content="Received data" Margin="26,498,0,0" VerticalAlignment="Top" Height="30" HorizontalAlignment="Left" FontSize="14" Background="White" FontStyle="Italic"/>

        <Rectangle Height="331" Margin="10,168,10,0" Stroke="Black" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

        <Label x:Name="extractedDataLabel_Copy1" Content="HTTP transfer interface" Margin="26,151,0,0" VerticalAlignment="Top" Height="30" HorizontalAlignment="Left" FontSize="14" Background="White" FontStyle="Italic"/>

        <Rectangle Height="135" Margin="10,18,10,0" Stroke="Black" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

        <TextBox x:Name="barcodeMessageTextBox" Margin="233,527,0,0" TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" IsReadOnly="True" Height="45" VerticalAlignment="Top" />
        <Button x:Name="sendHTTPrequestButton" Content="Send HTTP request" Margin="0,188,28,0" VerticalAlignment="Top" Click="SendHTTPrequestButton_Click" Height="26" Grid.Column="1" Width="160" HorizontalAlignment="Right"/>
        <TextBox x:Name="extractedAisTextBox"  FontFamily="Consolas" IsReadOnly="True" FontSize="14" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="233,701,0,13" VerticalContentAlignment="Top" />
        <CheckBox x:Name="permitUnknownAIsCheckBox" Content="Permit unknown AIs" FlowDirection="RightToLeft" Margin="27,29,28,0" VerticalAlignment="Top" Height="19" Grid.Column="1" FontWeight="Bold" Click="GenericCheckBox_Click">
            <CheckBox.Resources>
                <Style TargetType="{x:Type Path}">
                    <Setter Property="FlowDirection" Value="LeftToRight"/>
                </Style>
            </CheckBox.Resources>
        </CheckBox>
        <CheckBox x:Name="validateAIassociationsCheckBox" Content="Validate AI requisites" FlowDirection="RightToLeft" Margin="27,61,28,0" VerticalAlignment="Top" Click="GenericCheckBox_Click" Height="19" Grid.Column="1" IsChecked="True" FontWeight="Bold">
            <CheckBox.Resources>
                <Style TargetType="{x:Type Path}">
                    <Setter Property="FlowDirection" Value="LeftToRight"/>
                </Style>
            </CheckBox.Resources>
        </CheckBox>
        <TextBox x:Name="elementStringTextBox" Margin="233,584,0,0" TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" IsReadOnly="True" Height="45" VerticalAlignment="Top"/>
        <Label x:Name="barcodeMessageLabel" Content="Barcode message (^ = FNC1)" HorizontalAlignment="Left" Margin="18,534,0,0" VerticalAlignment="Top" Height="30" Width="204"/>
        <Label x:Name="elementStringLabel" Content="GS1 AI element string" HorizontalAlignment="Left" Margin="18,591,0,0" VerticalAlignment="Top" Height="30" Width="204"/>
        <TextBox x:Name="dlURItextBox" Margin="233,642,0,0" TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" IsReadOnly="True" Height="45" VerticalAlignment="Top"/>
        <Label x:Name="dlURIlabel" Content="GS1 Digital Link URI&#xA;(canonical form)" Margin="18,639,505,0" VerticalAlignment="Top" Height="52"/>
        <Label x:Name="extractedAisLabel" Content="Extracted AIs" Margin="18,706,507,0" Height="29" VerticalAlignment="Top"/>
        <TextBox x:Name="scanDataTextBox" Margin="233,66,0,0" TextWrapping="Wrap" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Height="76" VerticalAlignment="Top" TextChanged="GenericTextBox_TextChanged" Text="]Q3011231231231233310ABC123^99TEST"/>
        <Label x:Name="scanDataLabel" Content="Scan data&#xA;" HorizontalAlignment="Left" Margin="18,70,0,0" VerticalAlignment="Top" Height="30" Width="204" FontWeight="Bold"/>
        <TextBox x:Name="httpRequestTextBox" Margin="233,182,0,0" TextWrapping="Wrap" IsReadOnly="True" Height="122" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto"/>
        <Label x:Name="httpRequestLabel" Content="HTTP request to send" HorizontalAlignment="Left" Margin="18,189,0,0" VerticalAlignment="Top" Height="30" Width="204"/>
        <CheckBox x:Name="includeDataTitlesInHRIcheckBox" Content="Include data titles in HRI" FlowDirection="RightToLeft" Margin="3,93,28,0" VerticalAlignment="Top" Click="GenericCheckBox_Click" Height="19" Grid.Column="1" FontWeight="Bold">
            <CheckBox.Resources>
                <Style TargetType="{x:Type Path}">
                    <Setter Property="FlowDirection" Value="LeftToRight"/>
                </Style>
            </CheckBox.Resources>
        </CheckBox>
        <CheckBox x:Name="permitZeroSuppressedGTINinDLurisCheckBox" Content="Permit 0-supp (01) in DL" FlowDirection="RightToLeft" Margin="3,125,28,0" VerticalAlignment="Top" Click="GenericCheckBox_Click" Height="19" Grid.Column="1" FontWeight="Bold">
            <CheckBox.Resources>
                <Style TargetType="{x:Type Path}">
                    <Setter Property="FlowDirection" Value="LeftToRight"/>
                </Style>
            </CheckBox.Resources>
        </CheckBox>
        <TextBox x:Name="httpResponseTextBox" Margin="233,347,0,0" TextWrapping="Wrap" IsReadOnly="True" Height="136" VerticalAlignment="Top" VerticalScrollBarVisibility="Auto"/>
        <Label x:Name="httpResponseLabel" Content="HTTP response received" HorizontalAlignment="Left" Margin="18,355,0,0" VerticalAlignment="Top" Height="30" Width="204"/>
        <TextBox x:Name="endpointTextBox" Margin="233,29,0,0" TextWrapping="Wrap" TextChanged="GenericTextBox_TextChanged" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Text="http://127.0.0.1:3030/scanData" Height="22" VerticalAlignment="Top"/>
        <Label x:Name="exnpointURLlabel" Content="Endpoint URL" HorizontalAlignment="Left" Margin="18,29,0,0" VerticalAlignment="Top" Height="30" Width="204" FontWeight="Bold"/>
        <Label x:Name="infoLabel" Content="Starting..." Margin="238,309,28,0" VerticalAlignment="Top" Height="30" FontSize="14" Grid.ColumnSpan="2"/>
        <TextBox x:Name="fnc1indicatorTextBox" Margin="147,263,28,0" TextWrapping="Wrap" TextChanged="GenericTextBox_TextChanged" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.CanContentScroll="True" Text="^" Height="22" VerticalAlignment="Top" Grid.Column="1" TextAlignment="Center"/>
        <Label x:Name="httpRequestLabel_Copy" Content="FNC1/GS indicator" Margin="22,262,96,0" VerticalAlignment="Top" Height="30" Grid.Column="1" FontWeight="Bold"/>
        <CheckBox x:Name="AutoSubmitScansCheckBox" Content="Auto submit scans" FlowDirection="RightToLeft" Margin="3,233,28,0" VerticalAlignment="Top" Click="GenericCheckBox_Click" Height="19" Grid.Column="1" FontWeight="Bold" IsChecked="True">
            <CheckBox.Resources>
                <Style TargetType="{x:Type Path}">
                    <Setter Property="FlowDirection" Value="LeftToRight"/>
                </Style>
            </CheckBox.Resources>
        </CheckBox>
        <Label x:Name="extractedDataLabel_Copy" Content="Input query" Margin="26,1,0,0" VerticalAlignment="Top" Height="30" HorizontalAlignment="Left" FontSize="14" Background="White" FontStyle="Italic"/>
    </Grid>
</Window>
